pipeline {

  agent any

  environment {
    SVC_ACCOUNT_KEY = credentials('sreboot')
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
        sh 'mkdir -p creds' 
        sh 'echo $SVC_ACCOUNT_KEY | base64 -d > ./creds/serviceaccount.json'
      }
    }

    stage('TF destroy') {
      steps {
          sh 'cd TERRAFORM/GCEinstance ; terraform init'
          sh 'cd TERRAFORM/GCEinstance ; terraform destroy -input=false'
        }
    }


  } 

}
